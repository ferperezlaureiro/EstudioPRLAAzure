<!DOCTYPE hibernate-configuration PUBLIC
    "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration">
<hibernate-configuration>
	<session-factory>
		<!-- Database connection settings -->
		<property name="connection.driver_class">com.microsoft.sqlserver.jdbc.SQLServerDriver</property>
		<property name="connection.url">jdbc:sqlserver://estudioprladatabaseserver.database.windows.net:1433;database=EstudioPRLADatabes;encrypt=false;trustServerCertificate=false;hostNameInCertificate=*.database.windows.net;loginTimeout=30;</property>
		<property name="connection.username">hibernate@estudioprladatabaseserver</property>
		<property name="connection.password">estudio1!</property>
		<!-- JDBC connection pool (use the built-in) -->
		<property name="connection.pool_size">200</property>
		<!-- SQL dialect -->
		<property name="dialect">org.hibernate.dialect.SQLServerDialect</property>
		<!-- Enable Hibernate's automatic session context management -->
		<property name="current_session_context_class">thread</property>
		<!-- Disable the second-level cache -->
		<property name="cache.provider_class">org.hibernate.cache.NoCacheProvider</property>
		<!-- Echo all executed SQL to stdout -->
		<property name="show_sql">true</property>
		<!-- Drop and re-create the database schema on startup -->
		<property name="hbm2ddl.auto">create</property>
		<mapping class="logica.Usuario" />
		<mapping class="logica.Caso" />
		<mapping class="logica.Involucrado" />
		<mapping class="logica.Mensaje" />
		<mapping class="logica.Permiso" />
		<mapping class="logica.PermisoUsuario" />
		<mapping class="logica.UsuarioAsociadoACaso" />
		<mapping class="logica.Auditoria" />
	</session-factory>
</hibernate-configuration>